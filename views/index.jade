doctype 5
html(lang='en')
  head
    link(href='assets/css/bootstrap.css', rel='stylesheet')
    style
      body {
        padding-top: 60px;
      }
      .completed {
        text-decoration: line-through;
      }
  
    link(href='assets/css/bootstrap-responsive.css', rel='stylesheet')
    link(rel='shortcut icon', href='assets/ico/favicon.ico')
    script(src='assets/js/jquery.js')

  body
    script(id='navigationbar', type='text/x-handlebars')
      .navbar
        .navbar-inner
          {{ view view.LinksView }}

    script(id='input', type='text/x-handlebars')
      div {{ view view.TitleView }}
      div {{ view view.TagFilterView }}
      label Active {{ view view.ActiveFilterView }}

    .container-fluid
      .row-fluid
        .span4
          section(id='appapp')

          script(id='pagination', type='text/x-handlebars')
            .pagination
              {{view view.NavigationView contentBinding="view.pages"}}

          script(id='todosTemplate', type='text/x-handlebars')
            | {{#unless view.editing}}
            |   {{view Ember.Checkbox checkedBinding="view.content.completed" class="toggle"}}
            |   {{view.content.title}}
            |   {{#each tag in view.tags}}
            |   {{view view.TagView contentBinding="tag"}}
            |   {{/each}}
            |   {{view view.DueView contentBinding="view.content"}}
            | {{else}}
            |   {{view view.EditorView contentBinding="view" valueBinding="view.translate"}}
            | {{/unless}}

        script(src='assets/js/sugar-1.3.1.min.js')
        script(src='assets/js/bootstrap-transition.js')
        script(src='assets/js/bootstrap-alert.js')
        script(src='assets/js/bootstrap-modal.js')
        script(src='assets/js/bootstrap-dropdown.js')
        script(src='assets/js/bootstrap-scrollspy.js')
        script(src='assets/js/bootstrap-tab.js')
        script(src='assets/js/bootstrap-tooltip.js')
        script(src='assets/js/bootstrap-popover.js')
        script(src='assets/js/bootstrap-button.js')
        script(src='assets/js/bootstrap-collapse.js')
        script(src='assets/js/bootstrap-carousel.js')
        script(src='assets/js/bootstrap-typeahead.js')
        script(src='assets/js/bootstrap-datepicker.js')
        script(src='assets/js/libs/handlebars-1.0.0.beta.6.js')
        script(src='assets/js/libs/ember-1.0.pre.js')
        script(src='assets/js/libs/ember-data.js')
        script(src='javascripts/app.js')
