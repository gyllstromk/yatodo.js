{{#unless view.editing}}
  {{view Ember.Checkbox checkedBinding="view.content.completed" class="toggle"}}
  {{view.content.title}}
  {{#each tag in view.tags}}
  {{view view.TagView contentBinding="tag"}}
  {{/each}}
  {{view view.DueView contentBinding="view.content"}}
{{else}}
  {{view view.EditorView contentBinding="view" valueBinding="view.translate"}}
{{/unless}}
