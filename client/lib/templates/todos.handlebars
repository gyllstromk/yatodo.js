<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2"></div>
        <div class="span8">
            <script type="text/javascript">
            $(function() {
                $('.icon-calendar').tooltip();
            }());
            </script>

            <div class="row-fluid">
                <div class="span1"></div>
                <div class="span7">
                    <button class="btn" {{action insertNewTodo}}><span class="icon-plus-sign"></span></button>

                    {{view App.TextField classNames="search-query"
                                         placeholder="Search ..."
                                         valueBinding="App.todosController.searchQuery"
                    }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span1"></div>
                <div class="span9">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>{{view Ember.Checkbox checkedBinding="model.showAll"
                                                          classNames="toggle pull-right"}}
                                    <span class="icon-ok"></span>
                                </th>
                                <th><span class="icon-list-alt"></span></th>
                                <th><span class=""></span></th>
                                <th><span class="icon-tags"></span></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each item in model.arrangedContent}}
                            <tr>
                                <td>{{view Ember.Checkbox checkedBinding="item.completed"}}</td>
                                {{#if item.isEditing}}
                                    <td>
                                        {{view App.TextField contentBinding="item"}}
                                    </td>
                                {{else}}
                                    <td>
                                        <span {{bindAttr class="item.isCompleted"}}
                                              {{action "edit" item}}>
                                              {{item.title}}
                                        </span>
                                    </td>
                                {{/if}}

                                <td>
                                    {{#if item.isDue}}
                                        <a class="icon-calendar" {{bindAttr title="item.due"}}></a>
                                    {{/if}}
                                </td>

                                <td>
                                    {{#each tag in item.tags}}
                                        <a class="label" {{action "addTagQuery" tag}}>{{tag}}</a>
                                    {{/each}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row-fluid">
                <div class="pagination pagination-centered">
                    <ul>
                        {{#each page in model.pages}}
                            <li {{bindAttr class="page.isActive:active"}}>
                                <a {{action setPage page}}>{{page.number}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
